using System;

namespace BankingSystem
{
    public class Account
    {
        private string accountName; 
        private double balance;
        
        public Account(string name, double startingFunds)
        {
            accountName = name;
            if (startingFunds < 0)
            {
                Console.WriteLine("Warning: Initial amount cannot be negative. Setting balance to 0.");
                balance = 0; 
            }
            else
            {
                balance = startingFunds;
            }
        }
        
        public double ViewBalance()
        {
            return balance;
        }
        
        public void Deposit(double amount)
        {
            if (amount <= 0)
            {
                Console.WriteLine("Deposit amount must be greater than zero.");
                return;
            }
            balance += amount;
        }
        
        public void Withdrawal(double amount)
        {
            if (amount <= 0)
            {
                Console.WriteLine("Withdrawal amount must be greater than zero.");
                return;
            }
            if (amount > balance)
            {
                Console.WriteLine("Insufficient funds in your account.");
                return;
            }
            balance -= amount;
        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            Account heikkisAccount = new Account("Heikki's account", 100.00);
            Account heikkisSwissAccount = new Account("Heikki's account in Switzerland", 1000000.00);
            
            heikkisAccount.Withdrawal(20);
            Console.WriteLine("The balance of Heikki's account is now: " + heikkisAccount.ViewBalance());

            heikkisSwissAccount.Deposit(200);
            Console.WriteLine("The balance of Heikki's other account is now: " + heikkisSwissAccount.ViewBalance());
        }
    }
}
