using System;

class Program
{
    enum DayOfWeekEnum
    {
        Monday = 0,
        Tuesday,
        Wednesday,
        Thursday,
        Friday,
        Saturday,
        Sunday
    }

    static void Main()
    {
        Console.Write("Enter the number of days: ");
        int days = int.Parse(Console.ReadLine());
        
        DayOfWeek day = (DayOfWeek)(days % 7);
        
        Console.WriteLine("Day of the week: " + day);
    }
}
