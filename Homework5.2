using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Enter a number:");
        
        try
        {
            string input = Console.ReadLine();
            double number = Convert.ToDouble(input);
            Console.WriteLine($"Your number: {number}");
        }
        catch
        {
            Console.WriteLine("Please enter a number!");
        }
    }
}
